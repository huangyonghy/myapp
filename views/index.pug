block header
    link(rel='stylesheet', href='/stylesheets/index.css')
    .navbar.navbar-fixed-top.navbar-inverse#scrollBar
        .container
            .navbar-header
                button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#myNavbar'
                    aria-expanded='false' aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/index') #{user.username}
            .navbar-collapse.collapse#myNavbar
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='/index/enterprise') 企业
                    li
                        a(href='/index/engineer') 求职者

block content
    #section.container
        if enterprise_info
            include enterprise
        else if engineer_info
            include engineer
        else
            404 page not fpund
